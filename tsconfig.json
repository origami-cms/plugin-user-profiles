{
    "include": [
        "src/index.ts"
    ],
    "exclude": [],
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "es5",
            "es6",
            "es2015.promise",
            "es2016.array.include",
            "es2017.object"
        ],
        "declaration": true,
        "outDir": "build",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    }
}
